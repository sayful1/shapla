{
  "compilerOptions": {
    "sourceMap": true,
    "noImplicitAny": true,
    "allowJs": true,
    "target": "esnext",
    "module": "esnext",
    "jsx": "preserve",
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./resources/*"
      ]
    }
  },
  "include": [
    "./resources/**/*.ts",
    "./resources/**/*.tsx",
    "./tests/**/*.ts",
    "./tests/**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
